        { "type": "text", "value": { "values": { "en": "# Finger Placement\nCurve your fingers and press the string just behind the fret." } } },
        { "type": "text", "value": { "values": { "en": "Rest your thumb on the back of the neck for stability." } } },
        { "type": "text", "value": { "values": { "en": "Use one finger per fret to develop reach." } } },
